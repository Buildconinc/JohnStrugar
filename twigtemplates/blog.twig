{% extends "base.twig" %}
{% block content %}

{% set Blog = fetch("Blog") %}

<!-- intro -->
{% for item in Blog %}
{% if loop.index < 2 %}
<div class="blog-intro flex">
	<div class="flex flex-column ju-co-center width-50per">
		<div class="flex">
			<div class="line-black margin-left-64 margin-top-19"></div>
			<div class="flex flex-column">
				<div class="font-46 color-black line-height-54 margin-bottom-11 margin-left-40 width-462">{{item.Title}}</div>
				<div class="font-14 color-black font-300 line-height-22 margin-left-40 margin-bottom-66 width-462">{{item.short_text}}</div>
			</div>
		</div>
		<div class="flex al-it-center">
			<div class="line-black margin-left-64"></div>
			<a href="post/{{item.Slug}}" class="font-16 font-gotham color-black line-height-19 margin-left-40 margin-right-19">Read more</a>
			<a href="post/{{item.Slug}}">
				<img src="./assets/images/icons/arrowRight.png">
			</a>
		</div>
	</div>
	<div style="background-image: url('img/{{item.Photo}}')" class="blog-intro-image"></div>
</div>
{% endif %}
{% endfor %}

