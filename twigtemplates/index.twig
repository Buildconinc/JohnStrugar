<!-- blog posts -->
<div class="background-color-grey flex">
	<div class="flex margin-top-97 width-100per">
		<div class="line-black margin-left-64 margin-top-19"></div>
		<div class="flex flex-column width-80per">
			<div class="font-32 color-black line-height-38 margin-left-40 margin-bottom-81">General Health Advice</div>
			<div class="flex ju-co-between margin-left-40 margin-bottom-97 width-100per">
			{% set Blog = fetch("Blog") %}
			{% for item in Blog %}
			{% if item.selected and loop.index < 4 %}
				<div class="flex flex-column">
					<img class="image margin-bottom-22" style="background-image: url('img/{{item.Photo}}')">
					<div class="width-20vw font-24 font-bold color-black line-height-28 margin-bottom-14">{{item.Title}}</div>
					<div class="flex-wrap-3-line width-20vw font-14 color-black line-height-22 margin-bottom-22">{{item.short_text}}</div>
					<div class="flex al-it-center">
						<div class="line-small-black margin-right-16"></div>
						<a href="post/{{item.Slug}}" class="font-16 font-gotham color-black line-height-19 margin-left-40 margin-right-19">Read more</a>
						<a href="post/{{item.Slug}}">
							<img src="./assets/images/icons/arrowRight.png">
						</a>
					</div>
				</div>
				{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>	
</div>

