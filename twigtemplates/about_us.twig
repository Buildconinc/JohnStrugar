{% extends "base.twig" %}
{% set Title_and_Description = fetch("Title_and_Description", {"id": _GET['0']})[0] %}
{% block title %} | {{Title_and_Description.Title}}{% endblock %}
{% block description %}{{Title_and_Description.description}}{% endblock %}
{% block og_url %}/about_us{% endblock %}
{% block og_title %} {{Title_and_Description.Title}}{% endblock %}
{% block og_description %}{{Title_and_Description.description}}{% endblock %}
{% block og_image %}{{_BASE}}/img/{{Title_and_Description.og_img}}{% endblock %}
{% block content %}

{% set About_us = fetch("About_us") %}

<!-- about -->
<div class="flex home-about flex-900-column">
	<div class="backgroung-color-white width-50per">
		<div class="home-about-background flex flex-column ju-co-center padding-top-40 padding-bottom-40">
			<div class="flex">
				<div class="line-black margin-left-64 margin-top-55 display-none-960"></div>
				<div class="flex flex-column">
					<div class="font-16 font-300 color-black line-height-19 margin-left-40 margin-bottom-11">About</div>
					<div class="font-46 color-black line-height-54 margin-bottom-11 margin-left-40">{{About_us.Name}} </div>
					<div class="font-36 color-black line-height-42 margin-left-40 margin-bottom-50">{{About_us.Position}}</div>
					<div class="font-14 color-black font-300 line-height-22 margin-left-40 margin-right-40 border-box margin-bottom-66 width-462">{{About_us.about_us_text|raw}}</div>
				</div>
			</div>
			<div class="flex al-it-center">
				<div class="line-black margin-left-64"></div>
				<a href="education_and_qualifications" class="font-16 font-gotham color-black line-height-19 margin-left-40 margin-right-19">Education and Qualifications</a>
				<a href="education_and_qualifications">
					<img class="margin-right-40" src="./assets/images/icons/arrowRight.png">
				</a>
			</div>
		</div>
	</div>
	<div style="background-image: url('img/{{About_us.about_us_photo}}');" class="home-about-image width-50per"></div>
</div>

<!-- picture -->
<div style="background-image: url('img/{{About_us.video_image}}');" class="about-picture-1 flex al-it-center">
	<a data-fancybox href="{{About_us.Video}} ">
		<img class="home-intro-play" src="./assets/images/icons/play_gold.png">	</a>
</div>

<!-- treatments -->
{% include 'treatments-slider.twig' %}

<!-- picture -->
<div style="background-image: url('img/{{About_us.image}}');" class="about-picture-2 flex al-it-center"></div>

<!-- philosophy -->
<div class="flex padding-top-160 padding-bottom-160">
	<div class="line-black margin-left-64 margin-top-45 display-none-960"></div>
	<div class="flex flex-column">
		<div class="font-16 line-height-19 color-black margin-left-40 margin-bottom-6">Philosophy</div>
		<div class="font-32 line-height-38 color-black width-550 margin-left-40 margin-bottom-50">{{About_us.philosophy1_title}} </div>
		<div class="flex flex-900-column">
			<div class="flex flex-column margin-right-120 margin-900-bottom-40 margin-900-right-40">
				<div class="font-14 color-black font-300 line-height-22 margin-left-40 width-710">{{About_us.philosophy1_text1|raw}}</div>
			</div>
			<div class="flex flex-column margin-900-left-40 margin-900-right-40">
				<div class="font-14 color-black font-300 line-height-22 width-710">{{About_us.philosophy1_text2|raw}}</div>
			</div>
		</div>
	</div>
</div>

<!-- logo -->
<div class="about-logo flex al-it-center ju-co-center">
	<img style="max-width: 18.438rem; max-height: 9rem;" src="./assets/images/NOSS.png">
</div>

<!-- NOSS -->
<div class="flex padding-top-160 padding-bottom-160">
	<div class="line-black margin-left-64 margin-top-19 display-none-960"></div>
	<div class="flex flex-column">
		<div class="font-32 line-height-38 color-black width-550 margin-left-40 margin-bottom-50">{{About_us.philosophy2_title}} </div>
		<div class="flex flex-900-column">
			<div class="flex flex-column margin-right-120 margin-900-bottom-40 margin-900-right-40">
				<div class="font-14 color-black font-300 line-height-22 margin-left-40 width-710">{{About_us.philosophy2_text1|raw}}</div>
			</div>
			<div class="flex flex-column margin-900-left-40 margin-900-right-40">
				<div class="font-14 color-black font-300 line-height-22 width-710">{{About_us.philosophy2_text2|raw}}</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}